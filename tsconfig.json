{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "scripts/**/*.js",
    "deploy/**/*.js",
    "*.js"
  ]
}
