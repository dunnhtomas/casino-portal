    "deploy:check": "npm run seo:optimize && echo 'âœ… Ready for deployment!'",
    "test:css": "playwright test css-debug --headed --project=chromium",
    "test:audit": "playwright test homepage-audit --headed --project=chromium",
    "test:debug": "playwright test --debug --project=chromium",
    "playwright:install": "playwright install",
    "fix:mobile": "node scripts/mobile-first-fixes.js",
    "fix:css": "npm run fix:mobile && npm run build && npm run test:css",
