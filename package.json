    "deploy:with-real-logos": "npm run fetch:real-logos && npm run build && docker build -t casino-real-logos ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@googleapis/customsearch": "^6.0.0",
    "crawlee": "^3.15.1",
    "playwright": "^1.55.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
