---
const pageTitle = "Casino Bonuses - Best Bonus Offers in Canada 2025";
const pageDescription = "Discover the best casino bonuses available in Canada. Welcome bonuses, free spins, no deposit bonuses, and exclusive promotions.";
const canonicalUrl = "https://bestcasinoportal.com/bonuses";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  <link rel="canonical" href={canonicalUrl}>
</head>
<body>
  <main>
    <section class="hero py-16 bg-gradient-to-r from-gold-600 to-yellow-600 text-white">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center">{pageTitle}</h1>
        <p class="text-xl text-center max-w-3xl mx-auto">{pageDescription}</p>
      </div>
    </section>
    
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8">Popular Bonus Types</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">Welcome Bonuses</h3>
              <p class="text-gray-600 mb-4">Match bonuses for new players</p>
              <a href="/bonuses/welcome" class="bg-gold-600 text-white px-4 py-2 rounded hover:bg-gold-700 w-full inline-block text-center">
                View Welcome Bonuses
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">No Deposit Bonuses</h3>
              <p class="text-gray-600 mb-4">Free money to try casinos</p>
              <a href="/bonuses/no-deposit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full inline-block text-center">
                View No Deposit Bonuses
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">Free Spins</h3>
              <p class="text-gray-600 mb-4">Bonus spins on popular slots</p>
              <a href="/bonuses/free-spins" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 w-full inline-block text-center">
                View Free Spins
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
