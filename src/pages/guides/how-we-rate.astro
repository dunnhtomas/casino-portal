---
import SimplePageLayout from '../../components/Layout/SimplePageLayout.astro';
import { NavigationCoordinator } from '../../coordinators/NavigationCoordinator';
import { explain, WEIGHTS } from '../../managers/RatingManager';

const navigationCoordinator = new NavigationCoordinator();

const title = 'How We Rate Casinos | Transparent Methodology';
const description = 'Learn about our transparent casino rating methodology, scoring weights, and criteria for evaluating online casinos.';
const breadcrumbs = navigationCoordinator.generateBreadcrumbs('/guides/how-we-rate');
---

<SimplePageLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- ENHANCED HERO SECTION -->
    <section class="hero-section">
      <div class="hero-background-overlay"></div>
      <div class="hero-background-pattern"></div>
      
      <div class="hero-container">
        <header>
          <h1 class="hero-title">⚖️ How We Rate Casinos</h1>
          <p class="hero-subtitle">
            Discover our transparent methodology and comprehensive scoring system that ensures honest, unbiased casino reviews for players.
          </p>
        </header>
        
        <div class="hero-cta-container">
          <a 
            href="#rating-system" 
            class="hero-cta-primary"
            aria-label="View our rating methodology"
          >
            View Rating System
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a 
            href="#scoring-weights" 
            class="hero-cta-secondary"
          >
            Scoring Weights
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </a>
        </div>
        
        <div class="hero-trust-indicators">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>📊 Transparent Scoring • 🔍 Thorough Analysis • 🎯 Unbiased Reviews • 📈 Data-Driven</span>
        </div>
      </div>
    </section>

    <!-- ENHANCED CONTENT -->
    <section id="rating-system" class="container mx-auto px-6 py-16 max-w-6xl">
        <!-- INTRO -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <h2 class="text-3xl font-bold mb-6 text-gold-500">Our Transparent Approach</h2>
          <p class="text-lg text-cream-200 leading-relaxed">
            We publish our rating weights and methodology for complete transparency. Every casino is evaluated using the same criteria to ensure fair and consistent reviews.
          </p>
        </div>

        <!-- WEIGHTS SECTION -->
        <div class="content-card">
          <h2 class="content-card-subtitle">Rating Weights</h2>
          <div class="rating-grid">
            <div class="rating-grid-item">
              <div class="rating-card">
                <span class="rating-label">🛡️ Security & Fairness</span>
                <span class="rating-value">{WEIGHTS.security * 100}%</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
                <span class="font-medium">⚡ Payout Speed</span>
                <span class="font-bold text-gold-500">{WEIGHTS.payout * 100}%</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-casino-700/50 rounded-lg border border-casino-600">
                <span class="font-medium">🎁 Bonuses & Value</span>
                <span class="font-bold text-gold-500">{WEIGHTS.bonusValue * 100}%</span>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between items-center p-4 bg-casino-700/50 rounded-lg border border-casino-600">
                <span class="font-medium">🎮 Games & Providers</span>
                <span class="font-bold text-gold-500">{WEIGHTS.games * 100}%</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-casino-700/50 rounded-lg border border-casino-600">
                <span class="font-medium">📱 Mobile & UX</span>
                <span class="font-bold text-gold-500">{WEIGHTS.mobile * 100}%</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-casino-700/50 rounded-lg border border-casino-600">
                <span class="font-medium">💬 Support</span>
                <span class="font-bold text-gold-500">{WEIGHTS.support * 100}%</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-casino-700/50 rounded-lg border border-casino-600">
                <span class="font-medium">⭐ Reputation</span>
                <span class="font-bold text-gold-500">{WEIGHTS.reputation * 100}%</span>
              </div>
            </div>
          </div>
        </div>

        <!-- CRITERIA EXPLANATION -->
        <div class="content-card">
          <h2 class="content-card-subtitle">Detailed Criteria</h2>
          <div class="space-y-6">
            {explain({security:0,payout:0,bonusValue:0,games:0,mobile:0,support:0,reputation:0}).map(e => (
              <div class="criteria-item">
                <h3 class="criteria-title">{e.k}</h3>
                <p class="criteria-description">{e.why}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
</SimplePageLayout>
