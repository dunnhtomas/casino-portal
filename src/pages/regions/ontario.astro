---
import casinos from '../../../data/casinos.json';
import regions from '../../../data/regions.json';
import { getRegionData } from '../../viewmodels/RegionVM';
import faqs from '../../../data/faqs.json';
import FAQ from '../../components/RichText/FAQ';
import { generateFAQJSONLD } from '../../lib/schema';
const data = getRegionData(regions.regions, casinos, 'ontario');
const ontarioFaqs = (faqs.regions && faqs.regions.ontario) || [];
const ontarioFaqJson = generateFAQJSONLD(ontarioFaqs);
---
<html>
  <head>
    <title>Ontario Casinos — BestCasinoPortal</title>
  </head>
  <body>
    <main>
      <h1>Ontario — Local Casino Guidance</h1>
      <p>{data.region?.legalSummary}</p>
      <section>
        <h2>Verified Casinos</h2>
        <ul>
          {data.casinos.map(c=> (
            <li key={c.slug}>{c.brand} — {c.payoutSpeedHours ? `${c.payoutSpeedHours}h` : '—'}</li>
          ))}
        </ul>
      </section>
      <FAQ items={ontarioFaqs} />
      <script type="application/ld+json">{JSON.stringify(ontarioFaqJson)}</script>
    </main>
  </body>
</html>