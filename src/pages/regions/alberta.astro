---
import SimplePageLayout from '../../components/Layout/SimplePageLayout.astro';
import { NavigationCoordinator } from '../../coordinators/NavigationCoordinator';
import { EnhancedCasinoCard } from '../../components/Casino/EnhancedCasinoCard';
import type { CasinoCardData } from '../../components/Casino/EnhancedCasinoCard';
import casinos from '../../../data/casinos.json';
import { getBrandLogo } from '../../lib/getBrandLogo';

const navigationCoordinator = new NavigationCoordinator();

const title = 'Best Online Casinos for Alberta Players 2025';
const description = 'Top-rated online casinos accepting Alberta players. Compare bonuses, games, and payout methods for Canadian residents.';
const breadcrumbs = navigationCoordinator.generateBreadcrumbs('/regions/alberta');

// Filter casinos suitable for Alberta players
// Since we don't have explicit region/currency data, filter based on other criteria
const albertaCasinos = casinos
  .filter(c => 
    // Exclude casinos that restrict Canada or have US-only banking
    !(c.restrictedGeos as string[])?.includes('CA') && 
    !(c.restrictedGeos as string[])?.includes('Canada') &&
    // Include casinos with good reputation and safety scores
    c.ratings?.reputation >= 8 &&
    c.safety?.complaintRatio <= 0.05
  )
  .sort((a, b) => {
    // Calculate overall rating from available ratings
    const getRating = (casino: any) => {
      const ratings = casino.ratings || {};
      return (
        (ratings.security || 0) + 
        (ratings.fairness || 0) + 
        (ratings.payout || 0) + 
        (ratings.bonusValue || 0) + 
        (ratings.games || 0) + 
        (ratings.support || 0) + 
        (ratings.reputation || 0)
      ) / 7;
    };
    return getRating(b) - getRating(a);
  })
  .slice(0, 12);

// Map casino data to enhanced component format
const mapCasinoToCardData = (casino: any, rank: number): CasinoCardData => {
  // Calculate overall rating from available ratings
  const calculateOverallRating = (ratings: any) => {
    if (!ratings) return 9.0;
    const total = (
      (ratings.security || 0) + 
      (ratings.fairness || 0) + 
      (ratings.payout || 0) + 
      (ratings.bonusValue || 0) + 
      (ratings.games || 0) + 
      (ratings.support || 0) + 
      (ratings.reputation || 0)
    ) / 7;
    return Number(total.toFixed(1));
  };

  return {
    id: casino.slug || `casino-${rank}`,
    name: casino.brand || "Casino",
    logo: getBrandLogo(casino.url, casino.slug),
    slug: casino.slug || `casino-${rank}`,
    rating: {
      overall: calculateOverallRating(casino.ratings),
      trust: casino.ratings?.reputation || 9,
      bonuses: casino.ratings?.bonusValue || 9,
      games: casino.ratings?.games || 9,
      support: casino.ratings?.support || 9,
      payout: casino.ratings?.payout || 9
    },
    bonuses: {
      welcome: {
        amount: casino.bonuses?.welcome?.headline || "C$500 Welcome Bonus",
        type: 'match' as const,
        wagering: parseInt((casino.bonuses?.welcome?.wagering || '35x').replace('x', '')) || 35
      }
    },
    features: [
      { icon: '🇨🇦', label: 'CAD Accepted' },
      { icon: '🎰', label: 'Alberta Friendly' },
      { icon: '🔒', label: 'Licensed & Safe' }
    ],
    payoutSpeed: {
      min: '24h',
      max: `${casino.payoutSpeedHours || 24}h`,
      category: (casino.payoutSpeedHours || 24) <= 24 ? 'fast' as const : 'standard' as const
    },
    licenses: [
      {
        name: casino.licences?.[0] ? `${casino.licences[0]} Gaming Authority` : "Malta Gaming Authority",
        country: casino.licences?.[0] || 'Malta',
        logo: '/images/license-malta.png'
      }
    ],
    established: parseInt(casino.established) || 2020,
    gameCount: casino.gameCount || 1000,
    minDeposit: casino.minDeposit || 'C$10',
    currencies: ['CAD', 'USD'], // Default for Canadian players
    languages: ['English'] // Default for Alberta players
  };
};

const enhancedCasinos = albertaCasinos.map((casino, index) => mapCasinoToCardData(casino, index + 1));
---

<SimplePageLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- ENHANCED HERO SECTION -->
    <section class="hero-section">
      <div class="hero-background-overlay"></div>
      <div class="hero-background-pattern"></div>
      
      <div class="hero-container">
        <header>
          <h1 class="hero-title">🇨🇦 Alberta Online Casinos 2025</h1>
          <p class="hero-subtitle">
            Discover the best online casinos for Alberta players. CAD currency, safe banking, and exclusive bonuses for Canadian residents.
          </p>
        </header>
        
        <div class="hero-cta-container">
          <a 
            href="#alberta-casinos" 
            class="hero-cta-primary"
            aria-label="View top Alberta casinos"
          >
            View Alberta Casinos
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a 
            href="#gambling-info" 
            class="hero-cta-secondary"
          >
            Alberta Gaming Info
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </a>
        </div>
        
        <div class="hero-trust-indicators">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>💵 CAD Currency • 🏦 Canadian Banking • 🇨🇦 Alberta Legal • 🔒 Safe & Licensed</span>
        </div>
      </div>
    </section>

    <!-- CASINO LIST -->
    <section id="alberta-casinos" class="container mx-auto px-6 py-16 max-w-7xl">
      <div class="bg-white rounded-3xl shadow-xl p-8 mb-8 border border-gray-100 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-red-500 to-orange-500"></div>
        <div class="pt-4">
          <h2 class="text-4xl font-bold mb-6 text-gray-900">Top Casinos for Alberta Players</h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            These casinos welcome Alberta players with CAD currency support, Canadian banking methods, and compliance with local regulations.
          </p>
          
          <div class="grid md:grid-cols-3 gap-6 mb-12">
            <div class="text-center p-6 bg-gradient-to-br from-red-50 to-orange-50 rounded-2xl border border-red-200">
              <div class="w-16 h-16 bg-gradient-to-r from-red-500 to-orange-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                💵
              </div>
              <h3 class="font-bold mb-2 text-gray-900">CAD Currency</h3>
              <p class="text-sm text-gray-600">Play in Canadian Dollars</p>
            </div>
            <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-sky-50 rounded-2xl border border-blue-200">
              <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-sky-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                🏦
              </div>
              <h3 class="font-bold mb-2 text-gray-900">Canadian Banking</h3>
              <p class="text-sm text-gray-600">Interac, Credit Cards & More</p>
            </div>
            <div class="text-center p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl border border-green-200">
              <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                🔒
              </div>
              <h3 class="font-bold mb-2 text-gray-900">Licensed & Safe</h3>
              <p class="text-sm text-gray-600">Internationally Licensed</p>
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
            {enhancedCasinos.map((casino, index) => (
              <div class="transform hover:scale-[1.01] transition-all duration-300">
                <EnhancedCasinoCard 
                  casino={casino}
                  variant={index < 3 ? 'featured' : 'default'}
                  client:load
                />
              </div>
            ))}
          </div>
        </div>
      </div>
      
      <div id="gambling-info" class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
        <h2 class="text-3xl font-bold mb-6 text-gray-900">Alberta Online Gambling Information</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">⚖️ Legal Status</h3>
            <p class="text-gray-600 leading-relaxed">
              Online gambling is legal for Alberta residents when playing at internationally licensed casinos. AGLC oversees local gambling operations.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4 text-gray-800">💳 Payment Methods</h3>
            <p class="text-gray-600 leading-relaxed">
              Popular options include Interac e-Transfer, credit cards, and e-wallets like PayPal and Skrill for Canadian players.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</SimplePageLayout>
