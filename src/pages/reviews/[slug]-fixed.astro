---
import SimplePageLayout from '../../components/Layout/SimplePageLayout.astro';

// Generate static paths for all casino reviews
export async function getStaticPaths() {
  // Use import.meta.glob to load JSON at build time
  const dataFiles = import.meta.glob('../../../data/*.json', { eager: true });
  const casinosFile = dataFiles['../../../data/casinos.json'] as any;
  const casinosData = casinosFile?.default || [];
  
  return casinosData.map((casino: any) => ({
    params: { slug: casino.slug },
    props: { casino }
  }));
}

interface Casino {
  brand: string;
  slug: string;
  url?: string;
  affiliate?: { link: string };
  ratings?: Record<string, number>;
  bonuses?: { welcome?: { headline: string; wagering: string } };
  providers?: string[];
  banking?: string[];
  licences?: string[];
  [key: string]: any;
}

interface Props {
  casino: Casino;
}

const { casino } = Astro.props as Props;
const { slug } = Astro.params;

// Generate page metadata
const pageTitle = `${casino.brand} Review - Expert Analysis & Ratings`;
const pageDescription = `Comprehensive ${casino.brand} review with detailed analysis of games, bonuses, security, and customer service.`;

// Generate rating stars
function generateStars(rating: number) {
  return Array(5).fill(0).map((_, i) => i < Math.floor(rating / 2) ? '‚òÖ' : '‚òÜ').join('');
}

// Calculate overall rating
const overallRating = casino.ratings ? 
  (Object.values(casino.ratings) as number[]).reduce((sum: number, val: number) => sum + val, 0) / Object.keys(casino.ratings).length : 0;

// Generate breadcrumbs
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Reviews', href: '/reviews' },
  { label: casino.brand, href: '' }
];
---

<SimplePageLayout 
  title={pageTitle}
  description={pageDescription}
  breadcrumbs={breadcrumbs}
>
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
