---
import SimplePageLayout from '../../components/Layout/SimplePageLayout.astro';
import { NavigationCoordinator } from '../../coordinators/NavigationCoordinator';

// Define Casino interface matching actual data structure
interface CasinoData {
  slug: string;
  brand: string;
  url?: string;
  licences?: string[];
  restrictedGeos?: string[];
  ratings?: {
    security?: number;
    fairness?: number;
    payout?: number;
    bonusValue?: number;
    games?: number;
    support?: number;
    reputation?: number;
    [key: string]: number | undefined;
  };
  bonuses?: {
    welcome?: {
      headline?: string;
      wagering?: string;
      maxCashout?: number;
    };
  };
  providers?: string[];
  banking?: string[];
  topTags?: string[];
  logo?: {
    url?: string;
  };
  safety?: {
    yearsOnline?: number;
  };
  payoutSpeedHours?: number;
  affiliate?: {
    link?: string;
  };
}

// Generate static paths for all casino reviews
export async function getStaticPaths() {
  // Use import.meta.glob to load JSON at build time
  const dataFiles = import.meta.glob('../../../data/*.json', { eager: true });
  const casinosFile = dataFiles['../../../data/casinos.json'] as any;
  const casinosData = casinosFile?.default || [];
  
  return casinosData.map((casino: any) => ({
    params: { slug: casinoData.slug },
    props: { casino }
  }));
}

interface Props {
  casino: CasinoData;
}

const { casino } = Astro.props;
const { slug } = Astro.params;

// Type assertion to ensure TypeScript recognizes casino properties
const casinoData = casino as CasinoData;

// Initialize navigation coordinator
const navigationCoordinator = new NavigationCoordinator();

// Generate page metadata
const pageTitle = `${casinoData.brand} Review - Expert Analysis & Ratings`;
const pageDescription = `Comprehensive ${casinoData.brand} review with detailed analysis of games, bonuses, security, and customer service`;

// Generate rating stars
function generateStars(rating: number) {
  return Array(5).fill(0).map((_, i) => i < Math.floor(rating / 2) ? '‚òÖ' : '‚òÜ').join('');
}

// Calculate overall rating with proper typing
const overallRating = casinoData.ratings ? 
  Object.values(casinoData.ratings as any).reduce((sum: number, val: any) => sum + (Number(val) || 0), 0) / Object.keys(casinoData.ratings).length : 9.0;

// Generate breadcrumbs using navigation coordinator
const breadcrumbs = navigationCoordinator.generateBreadcrumbs(`/reviews/${casinoData.slug}`);
