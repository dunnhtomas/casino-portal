---
import SimplePageLayout from '../../components/Layout/SimplePageLayout.astro';
import { NavigationCoordinator } from '../../coordinators/NavigationCoordinator';
import * as schema from '../../lib/schema';
import faqs from '../../../data/faqs.json';
import FAQ from '../../components/RichText/FAQ';
import { EnhancedCasinoCard } from '../../components/Casino/EnhancedCasinoCard';
import type { CasinoCardData } from '../../components/Casino/EnhancedCasinoCard';
import casinos from '../../../data/casinos.json';
import { getBrandLogo } from '../../lib/getBrandLogo';

const navigationCoordinator = new NavigationCoordinator();

const title = 'Fast Withdrawal Casinos | Quick Payout Gaming Sites';
const description = 'Discover casinos with the fastest withdrawals. Learn which payment methods offer instant payouts and avoid lengthy waiting periods.';
const breadcrumbs = navigationCoordinator.generateBreadcrumbs('/best/fast-withdrawals');

const localFaqs = faqs['fast-withdrawals'] || [];
const fastFaqJson = schema.generateFAQJSONLD(localFaqs);

// Filter casinos with fast payouts
const fastWithdrawalCasinos = casinos
  .filter(c => c.payoutSpeedHours && c.payoutSpeedHours <= 24)
  .sort((a, b) => (a.payoutSpeedHours || 999) - (b.payoutSpeedHours || 999))
  .slice(0, 10);

// Map casino data to enhanced component format
const mapCasinoToCardData = (casino: any, rank: number): CasinoCardData => {
  return {
    id: casino.slug || `casino-${rank}`,
    name: casino.brand || "Casino",
    logo: getBrandLogo(casino.url, casino.slug),
    slug: casino.slug || `casino-${rank}`,
    rating: {
      overall: Number((casino.overallRating || 9.0).toFixed(1)),
      trust: casino.ratings?.reputation || 9,
      bonuses: casino.ratings?.bonusValue || 9,
      games: casino.ratings?.games || 9,
      support: casino.ratings?.support || 9,
      payout: casino.ratings?.payout || 9
    },
    bonuses: {
      welcome: {
        amount: casino.bonuses?.welcome?.headline || "‚Ç¨500 Welcome Bonus",
        type: 'match' as const,
        wagering: parseInt((casino.bonuses?.welcome?.wagering || '35x').replace('x', '')) || 35
      }
    },
    features: [
      { icon: '‚ö°', label: `${casino.payoutSpeedHours || 24}h Payout` },
      { icon: 'üöÄ', label: 'Fast Withdrawal' },
      { icon: 'üí∞', label: 'Instant Processing' }
    ],
    payoutSpeed: {
      min: `${casino.payoutSpeedHours || 1}h`,
      max: `${(casino.payoutSpeedHours || 1) * 2}h`,
      category: (casino.payoutSpeedHours || 24) <= 4 ? 'instant' as const : 'fast' as const
    },
    licenses: [
      {
        name: casino.license || "Malta Gaming Authority",
        country: 'Malta',
        logo: '/images/license-malta.png'
      }
    ],
    established: parseInt(casino.established) || 2020,
    gameCount: casino.gameCount || 1000,
    minDeposit: casino.minDeposit || '‚Ç¨10',
    currencies: casino.currencies || ['EUR', 'USD'],
    languages: casino.languages || ['English']
  };
};

const enhancedCasinos = fastWithdrawalCasinos.map((casino, index) => mapCasinoToCardData(casino, index + 1));
---

<SimplePageLayout 
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <script type="application/ld+json" set:html={JSON.stringify(fastFaqJson)} slot="head"></script>
  
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- ENHANCED HERO SECTION -->
    <section class="hero-section">
      <div class="hero-background-overlay"></div>
      <div class="hero-background-pattern"></div>
      
      <div class="hero-container">
        <header>
          <h1 class="hero-title">‚ö° Fast Withdrawal Casinos 2025</h1>
          <p class="hero-subtitle">
            Get your winnings faster with casinos that process withdrawals in 24 hours or less. Compare instant payout methods and withdrawal speeds.
          </p>
        </header>
        
        <div class="hero-cta-container">
          <a 
            href="#casino-list" 
            class="hero-cta-primary"
            aria-label="View fastest payout casinos"
          >
            View Fast Casinos
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a 
            href="#withdrawal-guide" 
            class="hero-cta-secondary"
          >
            Withdrawal Guide
            <svg class="ml-2 w-4 h-4 lg:w-5 lg:h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </a>
        </div>
        
        <div class="hero-trust-indicators">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>üí∏ Instant Payouts ‚Ä¢ üè¶ E-wallet Ready ‚Ä¢ üîí Secure Processing ‚Ä¢ ‚ö° 24h or Less</span>
        </div>
      </div>
    </section>

    <!-- ENHANCED CASINO LIST -->
    <section id="casino-list" class="container mx-auto px-6 py-16 max-w-7xl">
      <div class="bg-white rounded-3xl shadow-xl p-8 mb-8 border border-gray-100 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-green-500 to-emerald-500"></div>
        <div class="pt-4">
          <h2 class="text-4xl font-bold mb-6 text-gray-900">Fastest Payout Casinos</h2>
          <p class="text-gray-600 mb-8 text-lg leading-relaxed">
            These casinos are verified for processing withdrawals quickly, so you can access your winnings without long waiting periods.
          </p>
          
          <div class="grid md:grid-cols-3 gap-6 mb-12">
            <div class="text-center p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl border border-green-200">
              <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                üí∏
              </div>
              <h3 class="font-bold mb-2 text-gray-900">Instant Withdrawals</h3>
              <p class="text-sm text-gray-600">Some methods process in minutes</p>
            </div>
            <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-sky-50 rounded-2xl border border-blue-200">
              <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-sky-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                üè¶
              </div>
              <h3 class="font-bold mb-2 text-gray-900">E-wallet Options</h3>
              <p class="text-sm text-gray-600">PayPal, Skrill, Neteller available</p>
            </div>
            <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-violet-50 rounded-2xl border border-purple-200">
              <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-violet-500 rounded-2xl flex items-center justify-center text-white text-2xl mx-auto mb-4 shadow-lg">
                üîí
              </div>
              <h3 class="font-bold mb-2 text-gray-900">Secure Processing</h3>
              <p class="text-sm text-gray-600">Safe and verified transactions</p>
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
            {enhancedCasinos.map((casino, index) => (
              <div class="transform hover:scale-[1.01] transition-all duration-300">
                <EnhancedCasinoCard 
                  casino={casino}
                  variant={index < 3 ? 'featured' : 'default'}
                  client:load
                />
              </div>
            ))}
          </div>
        </div>
      </div>
      
      {localFaqs.length > 0 && (
        <div id="withdrawal-guide" class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-3xl font-bold mb-6 text-gray-900">Fast Withdrawal FAQ</h2>
          <FAQ items={localFaqs} client:load />
        </div>
      )}
    </section>
  </main>
</SimplePageLayout>
