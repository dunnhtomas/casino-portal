---
const pageTitle = "Casino Features - Essential Features Guide 2025";
const pageDescription = "Explore essential casino features in Canada. Live dealers, mobile games, VIP programs, and security features.";
const canonicalUrl = "https://bestcasinoportal.com/features";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  <link rel="canonical" href={canonicalUrl}>
</head>
<body>
  <main>
    <section class="hero py-16 bg-gradient-to-r from-green-600 to-teal-600 text-white">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center">{pageTitle}</h1>
        <p class="text-xl text-center max-w-3xl mx-auto">{pageDescription}</p>
      </div>
    </section>
    
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8">Key Casino Features</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">Live Dealer Games</h3>
              <p class="text-gray-600 mb-4">Real dealers, real-time gaming</p>
              <a href="/features/live-dealer" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full inline-block text-center">
                View Live Features
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">Mobile Gaming</h3>
              <p class="text-gray-600 mb-4">Play anywhere, anytime</p>
              <a href="/features/mobile" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full inline-block text-center">
                View Mobile Features
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">VIP Programs</h3>
              <p class="text-gray-600 mb-4">Exclusive rewards and benefits</p>
              <a href="/features/vip" class="bg-gold-600 text-white px-4 py-2 rounded hover:bg-gold-700 w-full inline-block text-center">
                View VIP Features
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
