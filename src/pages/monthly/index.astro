---
const pageTitle = "Monthly Casino Promotions - Monthly Offers 2025";
const pageDescription = "Monthly casino promotions and special offers in Canada. Regular monthly bonuses and recurring promotions.";
const canonicalUrl = "https://bestcasinoportal.com/monthly";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription}>
  <link rel="canonical" href={canonicalUrl}>
</head>
<body>
  <main>
    <section class="hero py-16 bg-gradient-to-r from-orange-600 to-yellow-600 text-white">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center">{pageTitle}</h1>
        <p class="text-xl text-center max-w-3xl mx-auto">{pageDescription}</p>
      </div>
    </section>
    
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-8">Monthly Promotions</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">January Bonuses</h3>
              <p class="text-gray-600 mb-4">Start the year right</p>
              <a href="/monthly/january" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full inline-block text-center">
                January Offers
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">February Bonuses</h3>
              <p class="text-gray-600 mb-4">Valentine's specials</p>
              <a href="/monthly/february" class="bg-pink-600 text-white px-4 py-2 rounded hover:bg-pink-700 w-full inline-block text-center">
                February Offers
              </a>
            </div>
            <div class="casino-card bg-white rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-bold mb-2">March Bonuses</h3>
              <p class="text-gray-600 mb-4">Spring into action</p>
              <a href="/monthly/march" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full inline-block text-center">
                March Offers
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
