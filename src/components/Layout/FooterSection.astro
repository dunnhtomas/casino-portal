---
import type { FooterSection } from '../../coordinators/NavigationCoordinator';

interface Props {
  footerSections: FooterSection[];
  affiliateDisclosure: string;
}

const { footerSections, affiliateDisclosure } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-16">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <div>
        <div class="font-bold text-2xl text-indigo-400 mb-4">BestCasinoPortal</div>
        <p class="text-gray-400 mb-4">Expert casino reviews and ratings you can trust.</p>
        <div class="text-sm text-gray-500">Updated: September {currentYear}</div>
      </div>
      
      {footerSections.map(section => (
        <div>
          <h3 class="font-semibold text-lg mb-4">{section.title}</h3>
          <ul class="space-y-2 text-gray-400">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="hover:text-white transition-colors"
                  {...(link.isExternal && { target: '_blank', rel: 'noopener noreferrer' })}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="border-t border-gray-800 pt-8 text-center">
      <p class="text-gray-400 text-sm mb-4">
        <strong>Affiliate Disclosure:</strong> {affiliateDisclosure}
      </p>
      <p class="text-gray-500 text-sm">
        Â© {currentYear} BestCasinoPortal. All rights reserved. | 18+ only. Gamble responsibly.
      </p>
    </div>
  </div>
</footer>