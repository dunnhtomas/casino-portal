---
import type { FooterSection } from '../../coordinators/NavigationCoordinator';

interface Props {
  footerSections?: FooterSection[];
  affiliateDisclosure?: string;
}

// Default footer sections for standalone usage
const defaultFooterSections: FooterSection[] = [
  {
    title: 'Best Casinos',
    links: [
      { label: 'All Best Casinos', href: '/best' },
      { label: 'Real Money Casinos', href: '/best/real-money' },
      { label: 'Fast Withdrawal Casinos', href: '/best/fast-withdrawals' },
      { label: 'Mobile Casinos', href: '/best/mobile' }
    ]
  },
  {
    title: 'Games & Bonuses',
    links: [
      { label: 'Casino Games', href: '/games' },
      { label: 'Slots', href: '/slots' },
      { label: 'Casino Bonuses', href: '/bonuses' }
    ]
  },
  {
    title: 'Information',
    links: [
      { label: 'About Us', href: '/about' },
      { label: 'Responsible Gaming', href: '/responsible-gaming' },
      { label: 'Privacy Policy', href: '/privacy-policy' }
    ]
  }
];

const defaultDisclosure = "We may receive compensation when you click on links to products. This does not impact our reviews, which are based on research and testing.";

const { footerSections = defaultFooterSections, affiliateDisclosure = defaultDisclosure } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer-section">
  <div class="footer-container">
    <div class="footer-grid">
      <div>
        <div class="footer-brand">ðŸŽ° BestCasinoPortal</div>
        <p class="footer-brand-description">Expert casino reviews and ratings you can trust.</p>
        <div class="footer-brand-updated">Updated: September {currentYear}</div>
      </div>

      {footerSections.map(section => (
        <div>
          <h3 class="footer-section-title">{section.title}</h3>
          <ul class="footer-links">
            {section.links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="footer-link"
                  {...(link.isExternal && { target: '_blank', rel: 'noopener noreferrer' })}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="footer-bottom">
      <p class="footer-disclosure">
        <strong>Affiliate Disclosure:</strong> {affiliateDisclosure}
      </p>
      <p class="footer-copyright">
        Â© {currentYear} BestCasinoPortal. All rights reserved. | 18+ only. Gamble responsibly.
      </p>
    </div>
  </div>
</footer>
