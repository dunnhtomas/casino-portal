---
import type { SEOMetadata } from '../../managers/SEOManager';
import type { SchemaMarkup } from '../../managers/SchemaMarkupManager';

interface Props {
  seoMetadata: SEOMetadata;
  schemaMarkup: {
    website: SchemaMarkup;
    faq: SchemaMarkup; 
    howTo: SchemaMarkup;
    breadcrumb: SchemaMarkup;
  };
}

const { seoMetadata, schemaMarkup } = Astro.props;
---

<!-- Primary Meta Tags -->
<title>{seoMetadata.title}</title>
<meta name="title" content={seoMetadata.title} />
<meta name="description" content={seoMetadata.description} />
<meta name="keywords" content={seoMetadata.keywords} />
<meta name="robots" content="index, follow" />
<meta name="language" content="English" />
<meta name="author" content="BestCasinoPortal" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={seoMetadata.canonicalUrl} />
<meta property="og:title" content={seoMetadata.title} />
<meta property="og:description" content={seoMetadata.description} />
<meta property="og:image" content={seoMetadata.ogImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="BestCasinoPortal" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta property="twitter:card" content={seoMetadata.twitterCard} />
<meta property="twitter:url" content={seoMetadata.canonicalUrl} />
<meta property="twitter:title" content={seoMetadata.title} />
<meta property="twitter:description" content={seoMetadata.description} />
<meta property="twitter:image" content={seoMetadata.ogImage} />
<meta name="twitter:creator" content="@BestCasinoPortal" />

<!-- Canonical URL -->
<link rel="canonical" href={seoMetadata.canonicalUrl} />

<!-- Additional SEO -->
<meta name="theme-color" content="#4f46e5" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />

<!-- Schema Markup -->
<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup.website)}></script>
<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup.faq)}></script>
<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup.howTo)}></script>
<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup.breadcrumb)}></script>