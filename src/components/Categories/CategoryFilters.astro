---
/**
 * CategoryFilters Component  
 * Single Responsibility: Display filtering options for category pages
 */

interface Props {
  filters: {
    sortOptions: Array<{ label: string; value: string }>;
    payoutSpeed: Array<{ label: string; value: string }>;
    gameProviders: Array<{ label: string; value: string }>;
    bonusTypes: Array<{ label: string; value: string }>;
  };
}

const { filters } = Astro.props;
---

<section class="bg-gradient-to-br from-gray-900 to-gray-800 py-8">
  <div class="container mx-auto px-6">
    <div class="bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-700">
      <h2 class="text-xl font-bold text-white mb-4">Filter & Sort</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Sort Options -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Sort By</label>
          <select class="w-full bg-gray-700 border border-gray-600 text-gray-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            {filters.sortOptions.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
        </div>
        
        <!-- Payout Speed -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Payout Speed</label>
          <select class="w-full bg-gray-700 border border-gray-600 text-gray-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <option value="">All Speeds</option>
            {filters.payoutSpeed.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
        </div>
        
        <!-- Game Providers -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Game Provider</label>
          <select class="w-full bg-gray-700 border border-gray-600 text-gray-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <option value="">All Providers</option>
            {filters.gameProviders.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
        </div>
        
        <!-- Bonus Types -->
        <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Bonus Type</label>
          <select class="w-full bg-gray-700 border border-gray-600 text-gray-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <option value="">All Bonuses</option>
            {filters.bonusTypes.map(option => (
              <option value={option.value}>{option.label}</option>
            ))}
          </select>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
// Filter functionality
document.addEventListener('DOMContentLoaded', function() {
  const selects = document.querySelectorAll('select');
  
  selects.forEach(select => {
    select.addEventListener('change', function() {
      // Apply filters to casino grid
      console.log('Filter applied:', this.value);
      // Implementation for dynamic filtering
    });
  });
});
</script>