---
/**
 * CategoryHero Component
 * Single Responsibility: Display category page hero section with filters and description
 */

interface Props {
  heroData: {
    title: string;
    description: string;
    totalCasinos: number;
    category: string;
    icon?: string;
  };
}

const { heroData } = Astro.props;
---

<section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      {heroData.icon && (
        <div class="text-6xl mb-6">{heroData.icon}</div>
      )}
      
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {heroData.title}
      </h1>
      
      <p class="text-xl mb-6 max-w-3xl mx-auto opacity-90">
        {heroData.description}
      </p>
      
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 inline-block">
        <span class="text-amber-300 font-bold text-lg">
          {heroData.totalCasinos}+ Top Casinos Found
        </span>
      </div>
    </div>
  </div>
</section>