      <h2 class="text-4xl font-bold text-white mb-6">üá®üá¶ Provincial Casino Hubs</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">Find casinos tailored to your local regulations, banking methods, and provincial preferences across Canada.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      {regions.map((region, index) => {
        const colors = [
          { gradient: 'from-blue-500 to-indigo-600', light: 'from-blue-50 to-indigo-50', border: 'border-blue-200' },
          { gradient: 'from-green-500 to-teal-600', light: 'from-green-50 to-teal-50', border: 'border-green-200' },
          { gradient: 'from-purple-500 to-pink-600', light: 'from-purple-50 to-pink-50', border: 'border-purple-200' }
        ];
        const color = colors[index] || colors[0];
        
        return (
          <a href={region.href} class="group">
            <div class={`bg-gray-800 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-300 p-8 border border-gray-700 group-hover:scale-[1.02] relative overflow-hidden`}>
              <div class={`absolute top-0 left-0 w-full h-2 bg-gradient-to-r ${color.gradient}`}></div>
              
              <div class="text-center mb-8 pt-4">
                <div class={`w-20 h-20 bg-gradient-to-r ${color.gradient} rounded-3xl flex items-center justify-center text-4xl mx-auto mb-6 shadow-lg`}>
                  {region.flag}
                </div>
                <h3 class="text-3xl font-bold text-white mb-3">{region.name}</h3>
                <div class={`inline-flex items-center gap-2 bg-gradient-to-r ${color.light} px-4 py-2 rounded-full ${color.border} border`}>
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                  <span class="text-sm font-medium text-gray-200">{region.legalStatus}</span>
                </div>
              </div>
              
              <p class="text-gray-300 mb-8 text-center leading-relaxed">{region.description}</p>
              
              <div class="space-y-3 mb-8">
                {region.highlights.map(highlight => (
                  <div class={`flex items-center gap-3 p-3 bg-gradient-to-r ${color.light} rounded-xl ${color.border} border`}>
                    <div class={`w-6 h-6 bg-gradient-to-r ${color.gradient} rounded-lg flex items-center justify-center flex-shrink-0`}>
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-sm font-medium text-gray-200">{highlight}</span>
                  </div>
                ))}
              </div>

              <div class="text-center">
                <div class={`inline-flex items-center gap-3 bg-gradient-to-r ${color.gradient} text-white px-6 py-3 rounded-xl font-bold group-hover:shadow-lg transition-all duration-300`}>
                  View {region.name} Casinos
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
