    <!-- Stats Section -->
    <div class="bg-gray-800 rounded-3xl shadow-xl p-8 border border-gray-700">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
        {regionalStats.map(stat => (
          <div class="text-center">
            <div class="text-3xl mb-2">{stat.icon}</div>
