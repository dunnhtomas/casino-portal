---
// Regional hubs for different provinces/regions
const regions = [
  {
    name: "Ontario",
    description: "Licensed casinos regulated by iGaming Ontario with local payment methods",
    href: "/regions/ontario",
    flag: "üè¢",
    highlights: ["iGaming Ontario regulated", "Local banking", "CAD currency"]
  },
  {
    name: "Alberta", 
    description: "Best online casinos available to Alberta residents with provincial considerations",
    href: "/regions/alberta",
    flag: "üèîÔ∏è",
    highlights: ["18+ age requirement", "Interac support", "Mountain time zone support"]
  },
  {
    name: "British Columbia",
    description: "BC-friendly casinos with appropriate licensing and local banking options",
    href: "/regions/british-columbia",
    flag: "üå≤",
    highlights: ["Pacific time support", "BCLC information", "Local payment methods"]
  }
];
---

<section id="region-hubs" class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Casinos by Province</h2>
      <p class="text-lg text-gray-600">Find casinos tailored to your local regulations and preferences</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {regions.map(region => (
        <a href={region.href} class="group">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-200 group-hover:scale-105">
            <div class="text-center mb-6">
              <div class="text-6xl mb-4">{region.flag}</div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{region.name}</h3>
            </div>
            
            <p class="text-gray-600 mb-6 text-center">{region.description}</p>
            
            <div class="space-y-2">
              {region.highlights.map(highlight => (
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-green-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm text-gray-700">{highlight}</span>
                </div>
              ))}
            </div>

            <div class="mt-6 pt-6 border-t border-gray-200 text-center">
              <div class="text-indigo-600 group-hover:text-indigo-700 font-semibold inline-flex items-center gap-2">
                View {region.name} Casinos
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/regions" class="inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 font-semibold">
        View All Regions & Provinces
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>