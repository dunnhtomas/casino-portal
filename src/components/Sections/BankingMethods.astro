---
// Banking Methods Section Component  
---

<section id="banking-methods" class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">Popular Payment Methods</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-2 sm:gap-3 lg:gap-6">
      {[
        { name: 'Visa', speed: '1-3 days' },
        { name: 'Interac', speed: '24-48h' },
        { name: 'PayPal', speed: '0-24h' },
        { name: 'Bitcoin', speed: 'Instant' },
        { name: 'Skrill', speed: 'Instant' },
        { name: 'Neteller', speed: 'Instant' }
      ].map(method => (
        <div class="text-center p-2 sm:p-4 bg-gray-50 rounded-lg">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-white rounded-lg shadow-sm mx-auto mb-2 sm:mb-3 flex items-center justify-center">
            <span class="font-bold text-gray-600 text-sm sm:text-base">{method.name.slice(0,2)}</span>
          </div>
          <h3 class="font-semibold text-gray-900 text-sm sm:text-base">{method.name}</h3>
          <p class="text-xs sm:text-sm text-gray-600">{method.speed}</p>
        </div>
      ))}
    </div>
  </div>
</section>