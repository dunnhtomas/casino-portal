---
// Fast Payout Spotlight section
import * as SortingManager from '../../managers/SortingManager';

const casinos = (await import('../../../data/casinos.json')).default;
const fastCasinos = [...casinos].sort(SortingManager.sortByPayout).slice(0, 6);
---

<section id="fast-payout-spotlight" class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Fastest Payout Casinos</h2>
      <p class="text-lg text-gray-600">Get your winnings in hours, not days</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {fastCasinos.map((casino, index) => (
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 hover:shadow-xl transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-bold text-green-600">#{index + 1}</span>
              </div>
              <h3 class="font-bold text-lg text-gray-900">{casino.brand}</h3>
            </div>
            <div class="text-right">
              <div class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                {casino.payoutSpeedHours}h
              </div>
            </div>
          </div>

          <div class="space-y-3 mb-6">
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-600">Payout Speed:</span>
              <span class="font-semibold">{casino.payoutSpeedHours} hours</span>
            </div>
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-600">Banking Methods:</span>
              <span class="font-semibold">{casino.banking.length} options</span>
            </div>
            <div class="flex items-center justify-between text-sm">
              <span class="text-gray-600">Best Methods:</span>
              <span class="font-semibold">{casino.banking.slice(0, 2).join(', ')}</span>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-4">
            <p class="text-sm text-gray-600 mb-4">
              {casino.topTags?.join(' â€¢ ')}
            </p>
            <a 
              href={`/reviews/${casino.slug}`}
              class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 px-4 rounded-lg font-semibold text-center inline-block transition-colors"
            >
              Play Now
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/best/fast-withdrawals" class="inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 font-semibold">
        View All Fast Payout Casinos
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>