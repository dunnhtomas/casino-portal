---
// Fast Payout Spotlight section
import * as SortingManager from '../../managers/SortingManager';

const casinos = (await import('../../../data/casinos.json')).default;
const fastCasinos = [...casinos].sort(SortingManager.sortByPayout).slice(0, 6);
---

<section id="fast-payout-spotlight" class="py-20 bg-gradient-to-br from-gray-900 to-gray-800 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-gradient-to-r from-gray-800/30 to-gray-700/20"></div>
  <div class="absolute top-0 right-0 w-96 h-96 bg-gray-700 rounded-full -mr-48 -mt-48 opacity-20"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-gray-600 rounded-full -ml-40 -mb-40 opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 bg-green-100 text-green-800 px-6 py-3 rounded-full font-bold text-sm mb-6">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
        FASTEST PAYOUTS
      </div>
      <h2 class="text-4xl font-bold text-white mb-6">⚡ Lightning-Fast Withdrawals</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">Get your winnings in hours, not days. These casinos prioritize quick payouts with verified processing times.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {fastCasinos.map((casino, index) => (
        <div class="bg-gray-800 rounded-3xl shadow-xl border border-gray-700 p-8 hover:shadow-2xl transition-all duration-300 transform hover:scale-[1.02] relative overflow-hidden">
          <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-green-500 to-emerald-500"></div>
          
          <div class="flex items-center justify-between mb-8 pt-2">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-sm font-bold text-white">#{index + 1}</span>
              </div>
              <h3 class="font-bold text-xl text-white">{casino.brand}</h3>
            </div>
            <div class="text-center">
              <div class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-4 py-2 rounded-xl text-lg font-bold shadow-lg">
                {casino.payoutSpeedHours}h
              </div>
              <p class="text-xs text-gray-500 mt-1">Avg. Speed</p>
            </div>
          </div>

          <div class="space-y-4 mb-8">
            <div class="flex items-center justify-between p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl border border-green-200">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-green-800 font-medium">Payout Speed</span>
              </div>
              <span class="font-bold text-green-900">{casino.payoutSpeedHours} hours</span>
            </div>
            <div class="flex items-center justify-between p-4 bg-gradient-to-r from-blue-50 to-sky-50 rounded-xl border border-blue-200">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm12 2H4v8h12V6z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-blue-800 font-medium">Banking Methods</span>
              </div>
              <span class="font-bold text-blue-900">{casino.banking.length} options</span>
            </div>
            <div class="flex items-center justify-between text-sm bg-cream-50 p-3 rounded-lg">
              <span class="text-casino-600 font-medium">Best Methods:</span>
              <span class="font-bold text-casino-900">{casino.banking.slice(0, 2).join(', ')}</span>
            </div>
          </div>

          <div class="border-t border-casino-200 pt-4">
            <p class="text-sm text-casino-600 mb-4 font-medium">
              {casino.topTags?.join(' • ')}
            </p>
            <a 
              href={`/reviews/${casino.slug}`}
              class="w-full bg-gradient-to-r from-casino-600 to-casino-700 hover:from-casino-700 hover:to-casino-800 text-white py-3 px-6 rounded-xl font-bold text-center inline-block transition-all duration-300 shadow-lg hover:shadow-xl"
            >
              Play Now
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/best/fast-withdrawals" class="inline-flex items-center gap-2 text-casino-600 hover:text-casino-700 font-bold text-lg">
        View All Fast Payout Casinos
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>