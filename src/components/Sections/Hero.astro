---
import { Image } from 'astro:assets';
import * as HomeVM from '../../viewmodels/HomeVM';
import DarkModeToggle from '../UI/DarkModeToggle.astro';

// Import hero background image for optimization
const heroImage = '/images/hero-bg-pattern.webp';

const heroContent = {
  title: "Best Online Casinos 2025 - Expert Reviews & Trusted Ratings",
  subtitle: "Discover the top-rated online casinos with our comprehensive reviews. Compare bonuses, games, and payout speeds from 79+ licensed casino sites. Find your perfect casino with fast withdrawals and fair play guarantees.",
  primaryCTA: "View Top Casinos",
  secondaryCTA: "Read Expert Reviews",
  trustCopy: "üèÜ 79+ Casinos Reviewed ‚Ä¢ ‚ö° Fast Payout Verified ‚Ä¢ üõ°Ô∏è Licensed & Safe ‚Ä¢ Updated Daily"
};
---

<!-- Mobile-First Hero Section with Dark Mode Support -->
<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-casino-900 via-casino-800 to-casino-700 dark:from-gray-900 dark:via-gray-800 dark:to-black">
  <!-- Dark Mode Toggle - Fixed Position -->
  <div class="fixed top-4 right-4 sm:top-6 sm:right-6 z-50">
    <DarkModeToggle />
  </div>
  
  <!-- Background Image with proper lazy loading -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-casino-900/90 via-casino-800/85 to-casino-700/80 dark:from-gray-900/95 dark:via-gray-800/90 dark:to-black/85"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(255,215,0,0.1)_0%,transparent_50%)] lg:bg-[radial-gradient(circle_at_50%_50%,rgba(255,215,0,0.15)_0%,transparent_70%)] dark:bg-[radial-gradient(circle_at_30%_50%,rgba(255,215,0,0.2)_0%,transparent_50%)]"></div>
    <!-- Animated particles for visual appeal -->
    <div class="absolute inset-0 opacity-20 dark:opacity-30">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-gold-400 rounded-full animate-pulse"></div>
      <div class="absolute top-3/4 right-1/4 w-3 h-3 bg-gold-300 rounded-full animate-pulse animation-delay-200"></div>
      <div class="absolute top-1/2 right-1/3 w-1 h-1 bg-gold-500 rounded-full animate-pulse animation-delay-500"></div>
    </div>
  </div>
  
  <!-- Main Hero Content Container -->
  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center space-y-6 sm:space-y-8 lg:space-y-10">
      <!-- Main Heading - Mobile First Typography -->
      <header class="space-y-4 sm:space-y-6">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black text-white leading-tight sm:leading-tight md:leading-tight tracking-tight">
          <span class="block sm:inline">{heroContent.title.split(' - ')[0]}</span>
          <span class="block sm:inline text-gold-400 mt-2 sm:mt-0">- {heroContent.title.split(' - ')[1]}</span>
        </h1>
        <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-casino-100 max-w-2xl lg:max-w-4xl mx-auto leading-relaxed px-4 sm:px-0">
          {heroContent.subtitle}
        </p>
      </header>
    
      <!-- Mobile-First CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center px-4 sm:px-0">
        <a 
          href="#top-three" 
          class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 lg:px-10 py-3 sm:py-4 lg:py-5 text-base sm:text-lg lg:text-xl font-bold text-casino-900 bg-gradient-to-r from-gold-400 via-gold-500 to-gold-400 rounded-2xl hover:from-gold-300 hover:via-gold-400 hover:to-gold-300 focus:ring-4 focus:ring-gold-500/50 transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-2xl group"
          aria-label="View our top-rated casino recommendations"
        >
          {heroContent.primaryCTA}
          <svg class="ml-2 w-5 h-5 lg:w-6 lg:h-6 group-hover:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>
        <a 
          href="#comparison-table" 
          class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 lg:px-10 py-3 sm:py-4 lg:py-5 text-base sm:text-lg lg:text-xl font-semibold text-white bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl hover:bg-white/20 hover:border-white/30 focus:ring-4 focus:ring-white/25 transition-all duration-300 group"
          aria-label="Compare all casino reviews side by side"
        >
          {heroContent.secondaryCTA}
          <svg class="ml-2 w-5 h-5 lg:w-6 lg:h-6 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </a>
      </div>
    
      <!-- Trust Indicators -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 bg-white/10 backdrop-blur-md rounded-2xl p-4 sm:p-6 mx-4 sm:mx-auto max-w-4xl border border-white/20">
        <div class="flex items-center text-green-400 mb-2 sm:mb-0">
          <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm sm:text-base lg:text-lg font-medium text-white">Verified Safe</span>
        </div>
        <div class="hidden sm:block w-1 h-6 bg-white/30 rounded-full"></div>
        <span class="text-xs sm:text-sm lg:text-base text-casino-100 text-center leading-relaxed">{heroContent.trustCopy}</span>
      </div>
    
      <!-- Key Features Grid - Mobile Optimized -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 max-w-4xl mx-auto px-4 sm:px-0">
        <div class="group bg-white/10 backdrop-blur-sm rounded-2xl p-4 sm:p-6 text-center border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 hover:scale-105">
          <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-green-500/20 rounded-2xl flex items-center justify-center group-hover:bg-green-500/30 transition-colors duration-300">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-green-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <p class="text-sm sm:text-base lg:text-lg font-semibold text-white">Licensed & Safe</p>
        </div>
        
        <div class="group bg-white/10 backdrop-blur-sm rounded-2xl p-4 sm:p-6 text-center border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 hover:scale-105">
          <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-blue-500/20 rounded-2xl flex items-center justify-center group-hover:bg-blue-500/30 transition-colors duration-300">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-blue-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <p class="text-sm sm:text-base lg:text-lg font-semibold text-white">Fast Payouts</p>
        </div>
        
        <div class="group bg-white/10 backdrop-blur-sm rounded-2xl p-4 sm:p-6 text-center border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 hover:scale-105">
          <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-purple-500/20 rounded-2xl flex items-center justify-center group-hover:bg-purple-500/30 transition-colors duration-300">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-purple-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-sm sm:text-base lg:text-lg font-semibold text-white">Expert Verified</p>
        </div>
        
        <div class="group bg-white/10 backdrop-blur-sm rounded-2xl p-4 sm:p-6 text-center border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 hover:scale-105">
          <div class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 sm:mb-4 bg-yellow-500/20 rounded-2xl flex items-center justify-center group-hover:bg-yellow-500/30 transition-colors duration-300">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <p class="text-sm sm:text-base lg:text-lg font-semibold text-white">Top Bonuses</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-6 sm:bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="flex flex-col items-center space-y-2 text-white/70 hover:text-white transition-colors duration-300 cursor-pointer" onclick="document.getElementById('benefits').scrollIntoView({behavior: 'smooth'});">
      <span class="text-xs sm:text-sm font-medium">Discover More</span>
      <svg class="w-5 h-5 sm:w-6 sm:h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>