---
import * as HomeVM from '../../viewmodels/HomeVM';
import * as RatingManager from '../../managers/RatingManager';
import { AdvancedRating } from '../Rating/AdvancedRating';

// Load data and get top casinos
const casinos = (await import('../../../data/casinos.json')).default;
const topCasinos = HomeVM.getTopCasinos(casinos).slice(0, 8);
---

<section id="comparison-table" class="py-16 bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 lg:px-6 w-full">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">🏅 Compare Top Online Casinos</h2>
      <p class="text-xl text-gray-600">Our highest-rated casino sites ranked by expert analysis</p>
      <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-primary-600 mx-auto mt-4 rounded"></div>
    </div>

    <div class="w-full overflow-x-auto bg-white rounded-2xl shadow-xl border border-gray-200" style="-webkit-overflow-scrolling: touch; scrollbar-width: thin;">
      <table class="w-full max-w-sm sm:max-w-none table-fixed sm:table-auto">
        <thead class="bg-gradient-to-r from-gray-100 to-gray-200 border-b-2 border-gray-300">
          <tr>
            <th class="text-left py-4 px-2 lg:py-6 lg:px-6 font-bold text-gray-900 text-sm lg:text-base w-12 sm:w-auto">🏆 Rank</th>
            <th class="text-left py-4 px-2 lg:py-6 lg:px-6 font-bold text-gray-900 text-sm lg:text-base w-20 sm:w-auto sm:min-w-[180px]">🎰 Casino</th>
            <th class="text-center py-4 px-1 lg:py-6 lg:px-4 font-bold text-gray-900 text-sm lg:text-base w-12 sm:w-auto">⭐ Rating</th>
            <th class="text-center py-4 px-1 lg:py-6 lg:px-4 font-bold text-gray-900 text-sm lg:text-base w-14 sm:w-auto">⚡ Payout</th>
            <th class="text-center py-4 px-1 lg:py-6 lg:px-4 font-bold text-gray-900 text-sm lg:text-base w-16 sm:w-auto sm:min-w-[120px]">💰 Bonus</th>
            <th class="text-center py-4 px-2 lg:py-6 lg:px-6 font-bold text-gray-900 text-sm lg:text-base w-16 sm:w-auto">🎯 Action</th>
          </tr>
        </thead>
        <tbody>
          {topCasinos.map((casino, index) => {
            const overallRating = RatingManager.computeScore(casino.ratings);
            const ratingData = {
              overall: overallRating,
              trust: casino.ratings?.reputation || 9,
              bonuses: casino.ratings?.bonusValue || 9,
              games: casino.ratings?.games || 9,
              support: casino.ratings?.support || 9,
              payout: casino.ratings?.payout || 9
            };
            
            return (
              <tr class={`border-b transition-all duration-200 ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'} hover:bg-blue-50 hover:shadow-md`}>
                <td class="py-4 px-2 lg:py-6 lg:px-6 text-center">
                  <div class={`w-6 h-6 lg:w-10 lg:h-10 rounded-full flex items-center justify-center font-bold mx-auto text-sm lg:text-lg text-white ${
                    index === 0 ? 'bg-gradient-to-r from-gold-400 to-gold-600' :
                    index === 1 ? 'bg-gradient-to-r from-gray-400 to-gray-600' :
                    index === 2 ? 'bg-gradient-to-r from-amber-600 to-amber-800' :
                    'bg-gradient-to-r from-primary-500 to-primary-700'
                  }`}>
                    {index + 1}
                  </div>
                </td>
                <td class="py-4 px-2 lg:py-6 lg:px-6">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 lg:w-12 lg:h-12 bg-gray-200 rounded-lg flex-shrink-0 flex items-center justify-center">
                      <span class="text-sm lg:text-lg font-bold text-gray-600">🎰</span>
                    </div>
                    <div class="truncate">
                      <div class="font-bold text-gray-900 text-sm lg:text-lg truncate">{casino.brand}</div>
                      <div class="text-xs lg:text-sm text-gray-600 hidden sm:flex items-center gap-1">
                        <span class="bg-green-100 text-green-700 px-2 py-1 rounded text-xs">Licensed</span>
                        {casino.topTags?.slice(0, 1).join('')}
                      </div>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-1 lg:py-6 lg:px-4 text-center">
                  <div class="flex flex-col items-center gap-1">
                    <span class="font-bold text-lg lg:text-2xl text-yellow-600">{overallRating}</span>
                    <div class="flex gap-1">
                      {[1,2,3,4,5].map(star => (
                        <svg class={`w-3 h-3 lg:w-4 lg:h-4 ${star <= Math.floor(overallRating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      ))}
                    </div>
                  </div>
                </td>
                <td class="py-4 px-1 lg:py-6 lg:px-4 text-center">
                  <div class="flex flex-col items-center gap-1">
                    <span class={`px-2 py-1 rounded-full text-xs lg:text-sm font-bold ${
                      (casino.payoutSpeedHours || 24) <= 4 ? 'bg-green-100 text-green-800' :
                      (casino.payoutSpeedHours || 24) <= 24 ? 'bg-yellow-100 text-yellow-800' :
                      'bg-red-100 text-red-800'
                    }`}>
                      {casino.payoutSpeedHours || 24}h
                    </span>
                    <span class="text-xs text-gray-500">
                      {(casino.payoutSpeedHours || 24) <= 4 ? 'Instant' :
                       (casino.payoutSpeedHours || 24) <= 24 ? 'Fast' : 'Standard'}
                    </span>
                  </div>
                </td>
                <td class="py-4 px-1 lg:py-6 lg:px-4 text-center">
                  <div class="flex flex-col items-center gap-1">
                    <div class="font-bold text-sm lg:text-base text-green-600 truncate">
                      {casino.bonuses?.welcome?.headline?.split(' ').slice(0, 2).join(' ') || "€500"}
                    </div>
                    <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">
                      {casino.bonuses?.welcome?.wagering || "35x"}
                    </span>
                  </div>
                </td>
                <td class="py-4 px-2 lg:py-6 lg:px-6 text-center">
                  <div class="flex flex-col gap-2">
                    <a 
                      href={casino.url || `#`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white px-3 py-2 lg:px-6 lg:py-3 rounded-lg text-xs lg:text-sm font-bold transition-all transform hover:scale-105 shadow-md hover:shadow-lg"
                    >
                      🎰 Play Now
                    </a>
                    <a 
                      href={`/reviews/${casino.slug}`}
                      class="text-primary-600 hover:text-primary-700 text-xs lg:text-sm font-semibold underline"
                    >
                      📋 Review
                    </a>
                  </div>
                </td>
              </tr>
            );
          })}
        </tbody>
      </table>
    </div>

    <!-- Mobile scroll hint -->
    <div class="text-center mt-4 text-sm text-gray-500 sm:hidden">
      <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
        <path d="M10 6L9 7l4 4-4 4 1 1 5-5-5-5z"/>
      </svg>
      👈 Scroll horizontally to see all details
    </div>

    <div class="text-center mt-8">
      <a href="/reviews" class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 font-bold text-lg bg-white px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all transform hover:scale-105">
        🔍 View All Casino Reviews
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>