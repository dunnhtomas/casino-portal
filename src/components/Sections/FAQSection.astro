---
import FAQ from '../RichText/FAQ';

interface Props {
  faqItems: any[];
}

const { faqItems } = Astro.props;
---

<section id="faq" class="py-16 bg-gradient-to-br from-gray-900 to-gray-800">
  <div class="max-w-4xl mx-auto px-6">
    <div class="faq-container p-8 rounded-2xl">
      <h2 class="text-3xl font-bold text-center text-casino-contrast mb-12">Frequently Asked Questions</h2>
      <FAQ client:load items={faqItems} />
    </div>
  </div>
</section>