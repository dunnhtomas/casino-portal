---
/**
 * ReviewHero Component
 * Single Responsibility: Display casino review hero section with rating and bonus
 */

interface Props {
  heroData: {
    casino: {
      name: string;
      logo?: string;
      domain: string;
      overallRating: number;
      ratingTier: string;
    };
    bonus: {
      primary: string;
      secondary?: string;
      terms: string[];
      highlight: boolean;
    };
    rating: {
      overall: number;
      explanation: any[];
    };
    trustIndicators: string[];
  };
}

const { heroData } = Astro.props;
---

<div class="review-hero">
  <div class="review-brand-info">
    <div class="flex items-start space-x-6">
      {heroData.casino.logo && (
        <div class="flex-shrink-0">
          <img 
            src={heroData.casino.logo} 
            alt={`${heroData.casino?.name || 'Casino'} logo`}
            class="w-20 h-20 object-contain rounded-2xl shadow-lg bg-gray-800 p-2 border border-gray-700"
          />
        </div>
      )}
      <div class="flex-grow">
        <h1 class="review-brand-title">{heroData.casino?.name || 'Casino'}</h1>
        <p class="review-brand-subtitle mb-4">Comprehensive Expert Review & Analysis</p>
        <div class="flex flex-wrap gap-2">
          {heroData.trustIndicators?.map?.(indicator => (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              {indicator}
            </span>
          )) || null}
        </div>
      </div>
    </div>
    
    <div class="review-rating-section flex-shrink-0">
      <div class="bg-gradient-to-r from-amber-500 to-orange-500 text-white px-8 py-4 rounded-2xl font-bold text-3xl inline-block shadow-lg">
        <div class="flex items-center space-x-2">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span>{heroData.rating?.overall?.toFixed(1) || 'N/A'}</span>
        </div>
      </div>
      <p class="text-sm text-gray-600 mt-2 font-medium">{heroData.casino?.ratingTier || 'Not Rated'}</p>
      <p class="text-xs text-gray-500 mt-1">Overall Rating</p>
    </div>
  </div>

  {heroData.bonus?.highlight && (
    <div class="mt-8 bg-gradient-to-r from-emerald-50 to-green-50 border-2 border-emerald-200 rounded-2xl p-8 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-100 rounded-full -mr-16 -mt-16 opacity-50"></div>
      <div class="relative">
        <div class="flex items-start space-x-6">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 bg-emerald-500 rounded-2xl flex items-center justify-center text-white text-2xl shadow-lg">
              üéÅ
            </div>
          </div>
          <div class="flex-grow">
            <div class="flex items-center space-x-3 mb-2">
              <h3 class="font-bold text-emerald-900 text-xl">Exclusive Welcome Bonus</h3>
              <span class="bg-emerald-500 text-white px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide">Limited Time</span>
            </div>
            <p class="text-emerald-800 font-bold text-2xl mb-2">{heroData.bonus?.primary}</p>
            {heroData.bonus?.secondary && (
              <p class="text-emerald-700 text-lg mb-3">{heroData.bonus.secondary}</p>
            )}
            <div class="flex flex-wrap gap-2">
              {heroData.bonus.terms?.map?.(term => (
                <span class="text-xs bg-emerald-100 text-emerald-800 px-2 py-1 rounded-md border border-emerald-200">
                  {term}
                </span>
              )) || null}
            </div>
          </div>
          <div class="flex-shrink-0">
            <a href={`https://${heroData.casino.domain}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              Claim Bonus
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  )}
</div>