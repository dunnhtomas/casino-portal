---
/**
 * ReviewContent Component
 * Single Responsibility: Display detailed review content
 */

interface Props {
  reviewContent: {
    title: string;
    content: string;
  };
}

const { reviewContent } = Astro.props;
---

<div class="bg-gray-800 rounded-2xl shadow-xl p-8 mb-8 border border-gray-700">
  <h2 class="text-2xl font-bold text-white mb-6">{reviewContent.title}</h2>
  <div class="prose max-w-none">
    <p class="text-gray-300 leading-relaxed text-lg">{reviewContent.content}</p>
  </div>
</div>