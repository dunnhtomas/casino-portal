---
/**
 * ReviewCTA Component
 * Single Responsibility: Display call-to-action section for casino review
 */

interface Props {
  ctaData: {
    title: string;
    subtitle: string;
    primaryButton: {
      text: string;
      href: string;
      variant: string;
    };
    secondaryButton: {
      text: string;
      href: string;
      variant: string;
    };
  };
}

const { ctaData } = Astro.props;
---

<div class="review-cta-section relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-gray-800/20 to-gray-700/20 backdrop-blur-sm"></div>
  <div class="absolute top-0 left-0 w-40 h-40 bg-gray-700/10 rounded-full -ml-20 -mt-20"></div>
  <div class="absolute bottom-0 right-0 w-32 h-32 bg-gray-700/10 rounded-full -mr-16 -mb-16"></div>
  
  <div class="relative">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-gray-700/20 rounded-2xl flex items-center justify-center text-3xl mx-auto mb-4">
        ðŸŽ†
      </div>
      <h3 class="text-4xl font-bold mb-4">{ctaData.title}</h3>
      <p class="text-white/90 mb-8 text-xl max-w-2xl mx-auto leading-relaxed">{ctaData.subtitle}</p>
    </div>
    
    <div class="flex flex-col sm:flex-row justify-center items-center gap-6 mb-8">
      <a 
        href={ctaData.primaryButton.href}
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center bg-white text-casino-700 px-10 py-5 rounded-2xl font-bold text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-3xl"
      >
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
        {ctaData.primaryButton.text}
        <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
      
      <a 
        href={ctaData.secondaryButton.href}
        class="inline-flex items-center border-2 border-white/80 text-white px-10 py-5 rounded-2xl font-bold text-lg hover:bg-white hover:text-casino-700 transition-all duration-300 transform hover:scale-105 backdrop-blur-sm"
      >
        <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        {ctaData.secondaryButton.text}
      </a>
    </div>
    
    <div class="text-center">
      <div class="inline-flex items-center space-x-6 bg-gray-800/10 backdrop-blur-sm rounded-2xl px-8 py-4 border border-gray-700/20">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-white/90 text-sm font-medium">Licensed & Regulated</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-white/90 text-sm font-medium">Secure Gaming</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="text-white/90 text-sm font-medium">Fair Play Certified</span>
        </div>
      </div>
    </div>
  </div>
</div>