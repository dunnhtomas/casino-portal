---
interface Props {
  region: string;
  category: string;
}

const { region, category } = Astro.props;

const guideContent = {
  legalStatus: `Online gambling is regulated in ${region}, with licensed operators providing safe and secure gaming experiences.`,
  paymentMethods: `Popular payment methods in ${region} include Interac e-Transfer, credit cards, e-wallets, and cryptocurrency options.`,
  licensing: `Look for casinos licensed by reputable authorities and specifically authorized to operate in ${region}.`,
  support: `Many casinos offer dedicated ${region} customer support with local phone numbers and chat support.`
};
---

<section id="guide" class="regional-guide py-16 bg-gradient-to-br from-gray-900 to-gray-800">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">
          {region} {category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())} Guide
        </h2>
        <p class="text-gray-300">
          Everything you need to know about playing at {category.replace('-', ' ')} casinos in {region}.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="bg-gray-800 rounded-xl p-8 shadow-lg border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="text-green-400 mr-3">⚖️</span>
            Legal Status
          </h3>
          <p class="text-gray-300 leading-relaxed">
            {guideContent.legalStatus}
          </p>
        </div>

        <div class="bg-gray-800 rounded-xl p-8 shadow-lg border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="text-blue-400 mr-3">💳</span>
            Payment Methods
          </h3>
          <p class="text-gray-300 leading-relaxed">
            {guideContent.paymentMethods}
          </p>
        </div>

        <div class="bg-gray-800 rounded-xl p-8 shadow-lg border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="text-purple-400 mr-3">🛡️</span>
            Licensing & Safety
          </h3>
          <p class="text-gray-300 leading-relaxed">
            {guideContent.licensing}
          </p>
        </div>

        <div class="bg-gray-800 rounded-xl p-8 shadow-lg border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-4 flex items-center">
            <span class="text-orange-400 mr-3">📞</span>
            Customer Support
          </h3>
          <p class="text-gray-300 leading-relaxed">
            {guideContent.support}
          </p>
        </div>
      </div>

      <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-4 text-center">Key Things to Remember</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl mb-2">✓</div>
            <h4 class="font-semibold mb-2">Always Verify</h4>
            <p class="text-blue-100 text-sm">Check casino licenses and regulations before playing</p>
          </div>
          <div class="text-center">
            <div class="text-3xl mb-2">🎯</div>
            <h4 class="font-semibold mb-2">Set Limits</h4>
            <p class="text-blue-100 text-sm">Establish deposit and time limits for responsible gaming</p>
          </div>
          <div class="text-center">
            <div class="text-3xl mb-2">📞</div>
            <h4 class="font-semibold mb-2">Get Help</h4>
            <p class="text-blue-100 text-sm">Contact support if you need assistance with gaming habits</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>